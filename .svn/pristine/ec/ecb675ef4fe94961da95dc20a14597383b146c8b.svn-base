				<!-- 할인/포인트/상품권 -->
				<div class="paymentWrap line">
					<div class="acc salePoint">
						<div class="accTit on">
							<button type="button" aria-selected="false" aria-expanded="false">
								<strong>할인/포인트/상품권</strong>
								<em class="price color01">-6,000원</em>
							</button>
						</div>
						<div class="accCon">
							<ul class="salepointList">
								<li>
									<strong>상품할인</strong>
									<span class="price">-1,000원</span>
								</li>
								<li>
									<strong>할인쿠폰</strong>
									<span class="price">-5,000원</span>
									<div class="couponSelect">
										<span class="checkForm">
											<input type="checkbox" id="couponAuto">
											<label for="couponAuto">쿠폰 자동적용</label>
										</span>
										<a href="#" role="button" class="btnTS btnS">쿠폰선택</a>
									</div>
								</li>
								<li>
									<strong>통신사 할인</strong>
									<span class="price">-0원</span>
									<select title="통신사 카드 선택">
										<option value="">멤버십카드 없음</option>
									</select>
								</li>
								<li>
									<strong role="text">GS&amp;POINT<em>잔여:<b class="color01">3,260P</b></em></strong>
