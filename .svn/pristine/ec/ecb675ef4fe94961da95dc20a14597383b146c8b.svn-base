				<!-- 결제수단 -->
				<div class="paymentWrap line">
					<div class="acc methodPay">
						<div class="accTit on">
							<button type="button" aria-selected="false" aria-expanded="false">
								<strong>결제수단</strong>
								<em class="txt">신용카드</em>
							</button>
						</div>
						<div class="accCon">
							<div class="cardTab">
								<ul role="tablist">
									<li><a href="#" role="tab" aria-controls="tab01" aria-selected="true">신용카드</a></li>
									<li><a href="#" role="tab" aria-controls="tab02" aria-selected="false">신용카드<br>(간편결제)</a></li>
									<li><a href="#" role="tab" aria-controls="tab03" aria-selected="false">모바일팝</a></li>
									<li><a href="#" role="tab" aria-controls="tab04" aria-selected="false">휴대폰결제</a></li>
									<li><a href="#" role="tab" aria-controls="tab05" aria-selected="false">실시간<br>계좌이체</a></li>
								</ul>
							</div>
							<div role="tabpanel" id="tab01" class="tabcon">
								tab01 내용
							</div>
						</div>
					</div>
				</div>
				<!-- //결제수단 -->
				<!-- 최종 결제 금액 -->
				<div class="paymentWrap line">
					<div class="acc lastPay">
						<div class="accTit">
							<button type="button" aria-selected="false" aria-expanded="false">
								<strong>최종 결제 금액</strong>
								<em class="price">1,298,000원</em>
							</button>
						</div>
						<div class="accCon">
							내용
						</div>
					</div>
				</div>
				<!-- //최종 결제 금액 -->
				<div class="btnFixed">
                    <div class="btnPrss">
                        <button type="button" class="btnTP active">116,350원 결제하기</button>
