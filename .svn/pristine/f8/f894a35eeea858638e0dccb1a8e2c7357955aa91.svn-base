@charset "utf-8";

/** guide **/
[class^="btnT"].active{border-color:#00573f;background:#00573f}
[class^="btnT"].color{color:#00573f;border-color:#00573f}
.btnMore{border-color:#00573f;background:#00573f}
.checkForm input[type='checkbox']+label:before, .checkForm input[type='radio']+label:before{background-image:url(../image/fresh/bg_form.png)}
.tabArea ul li a[aria-selected="true"]:after,
.tabTog ul li a[aria-selected="true"],
.tgSwich input:checked + label{background-color:#00573f}

/** 사전예약 **/
.prDetail{padding:0 25px;}

/* 사전예약상품 타이머 */
.prDetail .imgArea{position:relative;margin:0 -25px;}
.prDetail .imgArea .timer{position:absolute;top:25px;right:25px;display:inline-block;padding:0 15px;border:1px solid #c0df16;border-radius:15px;font-size:14px;line-height:23px;}
.prDetail .imgArea .prRsvImg{text-align:center;}
.prDetail .imgArea .prRsvImg img{max-width:375px;}

.prDetail .advRsv{margin:0 -25px;}
.prDetail .advRsv .info{padding:25px;}
.prDetail .advRsv .info .store span{font-size:16px;color:#00573f;line-height:23px;}
.prDetail .advRsv .info .store span em{display:inline-block;margin-right:5px;padding:5px 7px;background:#00573f;font-size:14px;line-height:14px;color:#fff;}
.prDetail .advRsv .info .prTit{margin-top:10px;font-size:18px;color:#111;letter-spacing:-1px;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;word-wrap:break-word; line-height:1.2em;max-height:2.4em;}
.prDetail .advRsv .info .price{padding-top:25px;}
.prDetail .advRsv .info .price:after{content:'';display:block;clear:both;}
.prDetail .advRsv .info .price dt{float:left;font-size:19px;line-height:28px;letter-spacing:-1px;}
.prDetail .advRsv .info .price dd{float:right;font-size:28px;font-weight:bold;line-height:28px;letter-spacing:-1px;word-break:break-all;}
.prDetail .advRsv .info .price .benefit{margin-top:2px;clear:both;}
.prDetail .advRsv .info .price .benefit:after{content:'';display:block;clear:both;}
.prDetail .advRsv .info .price .benefit span{float:left;margin:5px 0 0 5px;padding:0 15px;border-radius:4px;font-size:14px;line-height:30px;color:#222;font-weight:normal;letter-spacing:-1px;}
.prDetail .advRsv .info .price .benefit .colorG{background:#c0df16;}
.prDetail .advRsv .info .price .benefit .colorY{background:#ffcd00;}

.prDetail .advRsv .infoList{border-top:1px dashed #ddd;font-size:16px;}
.prDetail .advRsv .infoList>li{padding:15px 25px;border-bottom:1px dashed #ddd;}
.prDetail .advRsv .infoList *{vertical-align:top;}
.prDetail .advRsv .infoList dl:after{content:'';display:block;clear:both;}
.prDetail .advRsv .infoList dt{float:left;padding-right:17px;width:100px;line-height:30px;color:#222;word-break:break-all;letter-spacing:-1px;}
.prDetail .advRsv .infoList dd{float:left;color:#777;width:calc(100% - 100px);padding-top:5px;line-height:22px;letter-spacing:-1px;}
.prDetail .advRsv .infoList dd .prices{line-height:23px;}
.prDetail .advRsv .infoList dd .prices li{display:table;margin-top:4px;}
.prDetail .advRsv .infoList dd .prices li:first-child{margin-top:0;}
.prDetail .advRsv .infoList dd .prices li span{display:table-cell;}
.prDetail .advRsv .infoList dd .prices li em{display:table-cell;position:relative;padding-left:17px;word-break:keep-all;}
.prDetail .advRsv .infoList dd .prices li em:before{content:'';display:block;position:absolute;top:5px;left:7px;background:#ccc;width:1px;height:10px;}
.prDetail .advRsv .infoList dd .txtPoint{color:#00bb31;}
.prDetail .advRsv .infoList dd .btns{margin-top:-5px;}
.prDetail .advRsv .infoList dd .btns:after{content:'';display:block;clear:both;}
.prDetail .advRsv .infoList dd .btns a{float:left;margin:10px 5px 0 0;}

/* sns 공유 */
.snsShare{padding:25px 0;text-align:center;}
.snsShare button{margin-left:20px;width:40px;height:40px;background:url(../image/common/bg_sns.png) 0 0 no-repeat;background-size:40px auto;text-indent:-9999px;}
.snsShare button:first-child{margin-left:0;}
.snsShare .kakao{background-position:0 0;}
.snsShare .story{background-position:0 -40px;}
.snsShare .facebook{background-position:0 -80px;}
.snsShare .instagram{background-position:0 -120px;}

/* 합계 고정 버튼 fixed btn 영역 */
.btnFixed.prFixed{height:115px}
.btnFixed.prFixed .prTotal{flex-basis:100%;height:55px;background:#fff;padding:17px 25px;}
.btnFixed.prFixed .prTotal:after{content:'';display:block;clear:both;}
.btnFixed.prFixed .prTotal .total{float:right;font-size:18px;font-weight:bold;}

/*수량 증가 감소*/
.quantity:after{content:'';display:block;clear:both;}
.quantity{float:left;}
.quantity .minus,
.quantity .plus{float:left;width:21px;height:21px;background:url(../image/common/bg_plusminus.png) 0 0 no-repeat;background-size:21px auto;}
.quantity .plus{background-position:0 -21px;}
.quantity input[type="number"]{float:left;margin:0;padding:0 5px;width:40px;height:21px;font-size:18px;line-height:21px;text-align:center;border:none;}

/*수량 텍스트만 있을때*/
.quantity .txt{font-size:18px;}
.quantity .txt em{margin-left:6px;color:#00bb31;}

